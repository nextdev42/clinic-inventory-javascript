<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8">
  <title>Ongeza Mtumiaji</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f9f9f9;
      padding: 20px;
    }
    h2 {
      text-align: center;
      margin-bottom: 10px;
    }
    form {
      background: white;
      padding: 20px;
      border-radius: 8px;
      max-width: 400px;
      margin: auto;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }
    label {
      display: block;
      margin-top: 15px;
      font-size: 16px;
    }
    input, textarea {
      width: 100%;
      padding: 12px;
      margin-top: 5px;
      font-size: 16px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    button {
      margin-top: 20px;
      padding: 12px;
      background: green;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      width: 100%;
      border-radius: 6px;
    }
    .error {
      color: red;
      font-size: 14px;
      margin-top: 5px;
    }
    .success-message {
      display: none;
      text-align: center;
      padding: 15px;
      margin-top: 20px;
      background-color: #e0ffe0;
      color: green;
      font-weight: bold;
      border-radius: 6px;
      animation: fadeIn 1s ease-in forwards;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to   { opacity: 1; }
    }
    a {
      display: block;
      margin-top: 20px;
      text-align: center;
      font-weight: bold;
      color: #007acc;
      text-decoration: none;
    }
  </style>
</head>
<body>

  <h2>üë§ Ongeza Mtumiaji wa Dawa</h2>

  <form id="form" action="/mtumiaji/ongeza" method="POST" onsubmit="return validateForm()">
    <label for="jina">Jina la Mtumiaji:</label>
    <input type="text" id="jina" name="jina" required>
    <div id="jinaError" class="error"></div>

    <label for="description">Maelezo ya Dawa (Description):</label>
    <textarea id="description" name="description" placeholder="Mfano: Paracetamol 2x3, Amoxicillin 1x2 kwa siku" rows="4"></textarea>
    <div id="descError" class="error"></div>

    <button type="submit">üíæ Hifadhi</button>
  </form>

  <div id="success" class="success-message">‚úÖ Taarifa imehifadhiwa vizuri!</div>

  <a href="/">‚¨ÖÔ∏è Rudi kwenye Dashibodi</a>

  <script>
    function validateForm() {
      const jina = document.getElementById('jina').value.trim();
      const desc = document.getElementById('description').value.trim();

      const jinaError = document.getElementById('jinaError');
      const descError = document.getElementById('descError');
      jinaError.textContent = '';
      descError.textContent = '';

      let valid = true;

      if (jina.length < 2) {
        jinaError.textContent = 'Tafadhali jaza jina sahihi (angalau herufi 2).';
        valid = false;
      }

      if (desc.length < 5) {
        descError.textContent = 'Tafadhali weka maelezo ya dawa yaliyo sahihi.';
        valid = false;
      }

      if (!valid) return false;

      document.getElementById('success').style.display = 'block';
      setTimeout(() => {
        document.getElementById('success').style.display = 'none';
      }, 3000);

      return true;
    }
  </script>

</body>
</html>
