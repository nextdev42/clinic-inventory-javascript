<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8">
  <title>Sajili Matumizi ya Dawa</title>
  <style>
    #user-info {
      font-weight: bold;
      margin-top: 10px;
      margin-bottom: 20px;
    }
    #user-info small {
      color: gray;
    }
  </style>
</head>
<body>
  <h1>Sajili Matumizi ya Dawa</h1>

  <% if (error) { %>
    <p style="color: red;"><%= error %></p>
  <% } %>

  <form method="POST" action="/matumizi/sajili">
    <label>Chagua Mtumiaji:</label>
    <select name="mtumiajiId" id="mtumiaji-select" required>
      <option value="">-- Chagua Mtumiaji --</option>
      <% watumiaji.forEach(m => { %>
        <option 
          value="<%= m.id %>" 
          data-jina="<%= m.jina %>" 
          data-maelezo="<%= m.maelezo || '' %>">
          <%= m.jina %>
        </option>
      <% }) %>
    </select>

    <!-- Maelezo ya mtumiaji yaliyochaguliwa -->
    <div id="user-info"></div>

    <h3>Chagua Dawa na Kiasi</h3>
    <% dawa.forEach((d, index) => { %>
      <div style="margin-bottom: 10px;">
        <input type="checkbox" name="dawaList[<%= index %>][confirmed]" value="true">
        <%= d.jina %> (<%= d.kiasi %> zipo) <br>
        <input type="hidden" name="dawaList[<%= index %>][id]" value="<%= d.id %>">
        Kiasi: 
        <input type="number" name="dawaList[<%= index %>][kiasi]" value="1" min="1" style="width: 60px;">
        <input type="hidden" name="dawaList[<%= index %>][tarehe]" value="<%= new Date().toISOString() %>">
      </div>
    <% }) %>

    <button type="submit">Sajili Matumizi</button>
  </form>

  <br>
  <a href="/">Rudi Nyumbani</a>

  <script>
    const select = document.getElementById('mtumiaji-select');
    const infoDiv = document.getElementById('user-info');

    select.addEventListener('change', function () {
      const selected = select.options[select.selectedIndex];
      const jina = selected.dataset.jina;
      const maelezo = selected.dataset.maelezo;

      if (jina && maelezo !== undefined) {
        infoDiv.innerHTML = `${jina}<br><small>${maelezo}</small>`;
      } else {
        infoDiv.innerHTML = '';
      }
    });
  </script>
</body>
</html>
