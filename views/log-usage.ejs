<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8">
  <title>Sajili Matumizi ya Dawa</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f9f9f9;
    }

    form {
      background-color: #fff;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 8px;
      max-width: 700px;
      margin: auto;
    }

    label, h3 {
      display: block;
      margin-top: 10px;
      font-weight: bold;
    }

    select, input[type="number"] {
      padding: 8px;
      margin-top: 5px;
      margin-bottom: 15px;
      width: 100%;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }

    .dawa-item {
      margin-bottom: 15px;
      padding: 10px;
      background-color: #f1f1f1;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .checkbox {
      margin-right: 10px;
      transform: scale(1.2);
    }

    .error-msg {
      color: red;
      font-size: 14px;
      margin-top: -10px;
      margin-bottom: 10px;
    }

    button {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: #218838;
    }

    a {
      display: inline-block;
      margin-top: 20px;
      text-decoration: none;
      color: #007bff;
    }

    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>Sajili Matumizi ya Dawa</h1>

  <% if (error) { %>
    <p class="error-msg"><%= error %></p>
  <% } %>

  <form method="POST" action="/matumizi/sajili" onsubmit="return validateForm()">
    <label for="mtumiaji">Chagua Mtumiaji:</label>
    <select name="mtumiajiId" id="mtumiaji" required>
      <option value="">-- Chagua mtumiaji --</option>
      <% watumiaji.forEach(m => { %>
        <option value="<%= m.id %>" <%= m.id == mtumiajiId ? 'selected' : '' %>>
          <%= m.jina %> - <%= m.maelezo || '' %>
        </option>
      <% }) %>
    </select>

    <h3>Chagua Dawa na Kiasi</h3>
    <% dawa.forEach((d, index) => { %>
      <div class="dawa-item">
        <label>
          <input type="checkbox" name="dawaList[<%= index %>][confirmed]" value="true" class="checkbox" onchange="toggleInput(<%= index %>)">
          <%= d.jina %> (<%= d.kiasi %> zipo)
        </label>
        <input type="hidden" name="dawaList[<%= index %>][id]" value="<%= d.id %>">
        <input type="number"
               name="dawaList[<%= index %>][kiasi]"
               placeholder="Ingiza kiasi"
               min="1" max="<%= d.kiasi %>"
               class="quantity-input"
               id="kiasi-<%= index %>"
               disabled>
        <input type="hidden" name="dawaList[<%= index %>][tarehe]" value="<%= new Date().toISOString() %>">
        <div class="error-msg" id="error-<%= index %>" style="display: none;"></div>
      </div>
    <% }) %>

    <button type="submit">Sajili Matumizi</button>
  </form>

  <br>
  <a href="/">Rudi Nyumbani</a>

  <script>
    function toggleInput(index) {
      const checkbox = document.querySelector(`input[name="dawaList[${index}][confirmed]"]`);
      const input = document.getElementById(`kiasi-${index}`);
      const error = document.getElementById(`error-${index}`);
      if (checkbox.checked) {
        input.disabled = false;
      } else {
        input.disabled = true;
        input.value = "";
        error.style.display = "none";
      }
    }

    function validateForm() {
      const checkboxes = document.querySelectorAll('.checkbox');
      let anyChecked = false;
      let valid = true;

      checkboxes.forEach((cb, index) => {
        const input = document.getElementById(`kiasi-${index}`);
        const error = document.getElementById(`error-${index}`);
        if (cb.checked) {
          anyChecked = true;
          if (!input.value || parseInt(input.value) < 1) {
            error.textContent = "Tafadhali ingiza kiasi sahihi.";
            error.style.display = "block";
            valid = false;
          } else {
            error.style.display = "none";
          }
        }
      });

      if (!anyChecked) {
        alert("Tafadhali chagua angalau dawa moja.");
        valid = false;
      }

      return valid;
    }
  </script>
</body>
</html>
