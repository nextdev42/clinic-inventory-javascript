<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8">
  <title>Sajili Matumizi ya Dawa</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f9f9f9;
      padding: 20px;
    }
    h2 {
      text-align: center;
    }
    form {
      background: white;
      padding: 20px;
      max-width: 700px;
      margin: auto;
      border-radius: 8px;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }
    label, select, input[type="number"] {
      display: block;
      margin-top: 10px;
      width: 100%;
    }
    .dawa-row {
      border: 1px solid #ddd;
      padding: 10px;
      border-radius: 5px;
      margin-bottom: 10px;
      background: #fafafa;
    }
    .dawa-row input[type="checkbox"] {
      transform: scale(1.3);
      margin-top: 10px;
    }
    button {
      margin-top: 20px;
      padding: 12px;
      background: green;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      width: 100%;
      border-radius: 6px;
    }
    .success-message {
      display: none;
      text-align: center;
      padding: 15px;
      margin-top: 20px;
      background-color: #e0ffe0;
      color: green;
      font-weight: bold;
      border-radius: 6px;
    }
    .error {
      color: red;
      font-size: 14px;
      margin-top: 10px;
      text-align: center;
    }
  </style>
</head>
<body>

  <h2>üìù Sajili Matumizi ya Dawa</h2>

  <form action="/matumizi/sajili" method="POST" onsubmit="return validateMatumizi()">
    <label for="mtumiajiId">Chagua Mtumiaji:</label>
    <select name="mtumiajiId" id="mtumiajiId" required>
      <% watumiaji.forEach(u => { %>
        <option value="<%= u.id %>"><%= u.jina %></option>
      <% }) %>
    </select>

    <h3>Chagua Dawa na Kiasi:</h3>
    <% dawa.forEach((d, index) => { %>
      <fieldset class="dawa-row">
        <legend><%= d.jina %> - <%= d.aina %></legend>

        <input type="hidden" name="dawaList[<%= index %>][id]" value="<%= d.id %>" />

        <label>Kiasi:</label>
        <input type="number" name="dawaList[<%= index %>][kiasi]" min="0" placeholder="e.g. 1" />

        <label>
          <input type="checkbox" class="confirm-checkbox" name="dawaList[<%= index %>][confirmed]" value="true" />
          ‚úÖ Dawa imetolewa
        </label>

        <input type="hidden" name="dawaList[<%= index %>][tarehe]" class="auto-tarehe" />
      </fieldset>
    <% }) %>

    <div id="errorMsg" class="error"></div>

    <button type="submit">üíæ Hifadhi Matumizi</button>
  </form>

  <div id="success" class="success-message">‚úÖ Matumizi ya dawa yamehifadhiwa vizuri!</div>

  <script>
    function getCurrentDatetimeLocal() {
      const now = new Date();
      const offset = now.getTimezoneOffset();
      const localTime = new Date(now.getTime() - offset * 60000);
      return localTime.toISOString();
    }

    function validateMatumizi() {
      const confirmedCheckboxes = document.querySelectorAll('.confirm-checkbox');
      const tareheInputs = document.querySelectorAll('.auto-tarehe');
      const errorDiv = document.getElementById('errorMsg');
      let atLeastOneConfirmed = false;

      confirmedCheckboxes.forEach((checkbox, index) => {
        if (checkbox.checked) {
          tareheInputs[index].value = getCurrentDatetimeLocal();
          atLeastOneConfirmed = true;
        } else {
          tareheInputs[index].value = '';
        }
      });

      if (!atLeastOneConfirmed) {
        errorDiv.textContent = "‚ö†Ô∏è Tafadhali thibitisha angalau dawa moja iliyotolewa.";
        return false;
      }

      errorDiv.textContent = ''; // clear previous errors
      return true;
    }
  </script>

</body>
</html>
