<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8">
  <title>Ongeza Dawa</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f9f9f9;
      padding: 20px;
    }
    form {
      background: white;
      padding: 20px;
      border-radius: 8px;
      max-width: 400px;
      margin: auto;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }
    label {
      display: block;
      margin-top: 15px;
      font-size: 16px;
    }
    input, select {
      width: 100%;
      padding: 12px;
      margin-top: 5px;
      font-size: 16px;
    }
    button {
      margin-top: 20px;
      padding: 12px;
      background: green;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      width: 100%;
      border-radius: 6px;
    }
    a {
      display: block;
      margin-top: 20px;
      text-align: center;
      color: #007acc;
      font-weight: bold;
    }
    .error {
      color: red;
      font-size: 14px;
      margin-top: 5px;
    }
    .success-message {
      display: none;
      text-align: center;
      padding: 15px;
      margin-top: 20px;
      background-color: #e0ffe0;
      color: green;
      font-weight: bold;
      border-radius: 6px;
      animation: fadeIn 1s ease-in forwards;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to   { opacity: 1; }
    }
  </style>
</head>
<body>

  <h2 style="text-align:center;">‚ûï Ongeza Dawa Mpya</h2>

  <form id="dawaForm" action="/dawa/ongeza" method="POST" onsubmit="return validateForm()">
    <label for="jina">Jina la Dawa:</label>
    <input type="text" id="jina" name="jina" required>

    <label for="aina">Aina ya Dawa:</label>
    <select id="aina" name="aina" required>
      <option value="Kidonge">Kidonge</option>
      <option value="Syrup">Syrup</option>
      <option value="Sindano">Sindano</option>
      <option value="Capsule">Capsule</option>
    </select>

    <label for="kiasi">Kiasi cha Mwanzo:</label>
    <input type="number" id="kiasi" name="kiasi" min="1" required>
    <div id="kiasiError" class="error"></div>

    <button type="submit">üíæ Hifadhi</button>
  </form>

  <div id="success" class="success-message">‚úÖ Dawa imehifadhiwa vizuri!</div>

  <a href="/">‚¨ÖÔ∏è Rudi kwenye Dashibodi</a>

  <script>
    function validateForm() {
      const kiasi = document.getElementById('kiasi').value;
      const errorDiv = document.getElementById('kiasiError');
      errorDiv.textContent = '';

      if (!kiasi || isNaN(kiasi) || Number(kiasi) <= 0) {
        errorDiv.textContent = 'Kiasi cha dawa lazima kiwe namba zaidi ya sifuri.';
        return false;
      }

      document.getElementById('success').style.display = 'block';
      setTimeout(() => {
        document.getElementById('success').style.display = 'none';
      }, 3000);

      return true;
    }
  </script>

</body>
</html>
