<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ripoti ya Matumizi ya Dawa na Watumiaji</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 1rem;
      background: #f0f4f8;
    }
    canvas {
      max-width: 100%;
      margin-top: 2rem;
    }
  </style>
</head>
<body>
  <h1>Ripoti ya Matumizi ya Dawa na Watumiaji</h1>

  <canvas id="clinicChart" width="400" height="200"></canvas>
  <canvas id="medicineChart" width="400" height="200"></canvas>

  <script src="/js/Chart.min.js"></script>
  <script>
  const chartData = JSON.parse('<%- JSON.stringify(chartData) %>');
  console.log("ðŸ“Š Chart Data:", chartData);

  // Clinic Chart
  const clinicCtx = document.getElementById('clinicChart').getContext('2d');
  new Chart(clinicCtx, {
    type: 'bar',
    data: {
      labels: chartData.clinics.labels,
      datasets: chartData.clinics.datasets
    },
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Watumiaji kwa Kliniki'
        }
      }
    }
  });

  // Medicine Chart
  const medicineCtx = document.getElementById('medicineChart').getContext('2d');
  new Chart(medicineCtx, {
    type: 'bar',
    data: {
      labels: chartData.medicines.labels,
      datasets: [{
        label: 'Idadi ya Matumizi',
        data: chartData.medicines.data,
        backgroundColor: chartData.medicines.backgroundColor
      }]
    },
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: 'Matumizi ya Dawa'
        }
      }
    }
  });
</script>

</body>
</html>
