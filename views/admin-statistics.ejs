<!DOCTYPE html>
<html lang="sw">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ripoti ya Matumizi ya Dawa na Watumiaji</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 1rem;
      background: #f9fafb;
    }
    h1 {
      color: #1e3a8a;
    }
    canvas {
      max-width: 100%;
      margin-top: 2rem;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <h1>Ripoti ya Matumizi ya Dawa na Watumiaji</h1>

  <canvas id="clinicChart" width="400" height="200"></canvas>
  <canvas id="medicineChart" width="400" height="200"></canvas>

  <script>
    // Hardcoded chart data
    const chartData = {
      clinics: {
        labels: ['Kisiwani', 'Mikwambe', 'Kibada', 'Jirambe'],
        datasets: [
          {
            label: 'Watumiaji Wote',
            data: [3, 0, 0, 0],
            backgroundColor: 'rgba(37, 99, 235, 0.7)'
          },
          {
            label: 'Watumiaji Waliotumia',
            data: [0, 0, 0, 0],
            backgroundColor: 'rgba(22, 163, 74, 0.7)'
          }
        ]
      },
      medicines: {
        labels: ['Paracetamol', 'Amoxicillin'],
        data: [5, 2],
        backgroundColor: 'rgba(220, 38, 38, 0.7)'
      }
    };

    const ctx1 = document.getElementById('clinicChart').getContext('2d');
    new Chart(ctx1, {
      type: 'bar',
      data: {
        labels: chartData.clinics.labels,
        datasets: chartData.clinics.datasets
      },
      options: {
        responsive: true,
        plugins: {
          title: {
            display: true,
            text: 'Watumiaji kwa Kituo'
          }
        }
      }
    });

    const ctx2 = document.getElementById('medicineChart').getContext('2d');
    new Chart(ctx2, {
      type: 'bar',
      data: {
        labels: chartData.medicines.labels,
        datasets: [{
          label: 'Idadi ya Matumizi ya Dawa',
          data: chartData.medicines.data,
          backgroundColor: chartData.medicines.backgroundColor
        }]
      },
      options: {
        responsive: true,
        plugins: {
          title: {
            display: true,
            text: 'Matumizi ya Dawa'
          }
        }
      }
    });
  </script>
</body>
</html>
