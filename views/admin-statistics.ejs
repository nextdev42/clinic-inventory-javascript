<!DOCTYPE html>
<html>
<head>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <!-- ... your head content ... -->
  <style>
    .debug-panel {
      background: #f3f4f6;
      padding: 1rem;
      margin: 1rem 0;
      border-radius: 0.5rem;
      font-family: monospace;
    }
    .debug-title {
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
  </style>
</head>
<body>
  <!-- ... your header ... -->

  <!-- Debug Panel -->
  <div class="debug-panel">
    <div class="debug-title">Debug Information</div>
    <div id="debugOutput">Loading debug data...</div>
  </div>
  <h2>Takwimu za Matumizi ya Dawa</h2>
  <canvas id="medicineChart" width="400" height="200"></canvas>

  <!-- ... your charts ... -->
<script>
  const chartData = <%- chartData %>; // Passed from backend as JSON string

  const ctx = document.getElementById('medicineChart').getContext('2d');

  const medicineChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: chartData.labels,
      datasets: [{
        label: 'Idadi ya Matumizi',
        data: chartData.data,
        backgroundColor: 'rgba(54, 162, 235, 0.7)',
        borderColor: 'rgba(54, 162, 235, 1)',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true,
          title: {
            display: true,
            text: 'Idadi ya Watumiaji'
          }
        }
      }
    }
  });
</script>

  
</body>
</html>
